/* Text overlay on home page images */
.overlay-bouquets { position: relative; }
.overlay-bouquets:after {
 position: absolute;
 content: '';
 background: url('https://thy2.webmastery.biz/wp-content/uploads/bouquets-hover2.png');
 background-size: cover; /* Make overlay fit the window of our original image */
 top: 0;
 right: 0;
 bottom: 0;
 left: 0;
 opacity: 0; /* Make's the overlay invisible until we hover */
 transition: .5s ease all; /* How long the transition takes */
}

.overlay-bouquets:hover:after {
 opacity: 1; /* Make Image Appear */
}

